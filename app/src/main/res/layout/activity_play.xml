<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/uimenu2"
    android:padding="25dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btn_exit"
                android:layout_width="60dp"
                android:layout_height="50dp"
                style="@style/MyButton2"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/back2"
                android:padding="10dp"

                android:tint="@color/white"
                tools:ignore="MissingConstraints" />

            <Chronometer
                android:id="@+id/chronometer"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_weight="2"
                style="@style/MyButton2"
                app:layout_constraintTop_toTopOf="@id/btn_volume"
                app:layout_constraintRight_toRightOf="@id/relativePlay"
                android:gravity="center"
                android:textSize="20sp"

                android:textColor="@color/white"
                tools:ignore="MissingConstraints" />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btn_volume"
        android:layout_width="60dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.02"
        android:layout_weight="1"
        android:layout_margin="4dp"
        android:src="@drawable/volume"
        style="@style/MyButton2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:padding="5dp"
        tools:ignore="MissingConstraints" />




    <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_count"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_weight="2"
                style="@style/MyButton2"
        app:layout_constraintTop_toTopOf="@id/btn_volume"
                app:layout_constraintRight_toLeftOf="@id/chronometer"
               app:layout_constraintLeft_toRightOf="@id/btn_volume"
                tools:text="0"
                android:gravity="center"
                android:layout_gravity="end"
                android:textColor="@color/white"
                android:textSize="20sp"
                tools:ignore="MissingConstraints" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/restart"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                style="@style/MyButton2"
                android:padding="7dp"
                app:layout_constraintLeft_toLeftOf="@id/pause"
                app:layout_constraintRight_toRightOf="@id/btn_exit"
                app:layout_constraintBottom_toBottomOf="@id/btn_exit"
                android:src="@drawable/restart"
                android:tint="@color/white"
                tools:ignore="MissingConstraints" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/pause"
        android:layout_width="110dp"
        android:layout_height="50dp"
        style="@style/MyButton2"
        android:text="pause"
        android:textColor="@color/white"
        app:layout_constraintRight_toRightOf="@id/relativePlay"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <RelativeLayout
        android:id="@+id/relativePlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.55"
        android:layout_marginTop="25dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn1"
            android:layout_width="64dp"
            android:layout_height="64dp"
            tools:text="1"
            style="@style/MyButton"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn2"
            android:layout_width="64dp"
            android:layout_height="64dp"
            tools:text="2"
            style="@style/MyButton"
            android:layout_toEndOf="@+id/btn1"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn3"
            android:layout_width="64dp"
            android:layout_height="64dp"
            tools:text="3"
            style="@style/MyButton"
            android:layout_toEndOf="@+id/btn2"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn4"
            android:layout_width="64dp"
            android:layout_height="64dp"
            tools:text="4"
            style="@style/MyButton"
            android:layout_toEndOf="@+id/btn3"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn5"
            android:layout_width="64dp"
            android:layout_height="64dp"
            tools:text="5"
            style="@style/MyButton"
            android:layout_below="@+id/btn1"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn6"
            android:layout_width="64dp"
            android:layout_height="64dp"
            tools:text="6"
            style="@style/MyButton"
            android:layout_toEndOf="@+id/btn1"
            android:layout_below="@+id/btn2"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn7"
            android:layout_width="64dp"
            android:layout_height="64dp"
            tools:text="7"
            style="@style/MyButton"
            android:layout_toEndOf="@+id/btn2"
            android:layout_below="@id/btn3"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn8"
            android:layout_width="64dp"
            android:layout_height="64dp"
            tools:text="8"
            style="@style/MyButton"
            android:layout_below="@+id/btn4"
            android:layout_toEndOf="@+id/btn7"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn9"
            android:layout_width="64dp"
            android:layout_height="64dp"
            tools:text="9"
            style="@style/MyButton"
            android:layout_below="@+id/btn5"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn10"
            android:layout_width="64dp"
            android:layout_height="64dp"
            tools:text="10"
            style="@style/MyButton"
            android:layout_toEndOf="@+id/btn1"
            android:layout_below="@+id/btn6"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn11"
            android:layout_width="64dp"
            android:layout_height="64dp"
            tools:text="11"
            style="@style/MyButton"
            android:layout_toEndOf="@+id/btn2"
            android:layout_below="@id/btn7"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn12"
            android:layout_width="64dp"
            android:layout_height="64dp"
            tools:text="12"
            style="@style/MyButton"
            android:layout_below="@+id/btn8"
            android:layout_toEndOf="@+id/btn7"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn13"
            android:layout_width="64dp"
            android:layout_height="64dp"
            tools:text="13"
            style="@style/MyButton"
            android:layout_below="@+id/btn9"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn14"
            android:layout_width="64dp"
            android:layout_height="64dp"
            tools:text="14"
            style="@style/MyButton"
            android:layout_toEndOf="@+id/btn1"
            android:layout_below="@+id/btn10"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn15"
            android:layout_width="64dp"
            android:layout_height="64dp"
            tools:text="15"
            style="@style/MyButton"
            android:layout_toEndOf="@+id/btn2"
            android:layout_below="@id/btn11"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn16"
            android:layout_width="64dp"
            android:layout_height="64dp"
            tools:text="16"
            style="@style/MyButton"
            android:layout_below="@+id/btn12"
            android:layout_toEndOf="@+id/btn7"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>